{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "lineWidth": 160,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/paraglide/**/*"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noNoninteractiveTabindex": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  }
}
