{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@contexts/*": ["contexts/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@types": ["types"],
      "@schemas/*": ["schemas/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"],
      "@themes/*": ["themes/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["src"]
}
